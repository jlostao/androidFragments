<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView AMB ViewModel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/textViewNoViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView SENSE ViewModel"
        android:layout_below="@id/textViewViewModel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonChangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canviar Text"
        android:layout_below="@id/textViewNoViewModel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>